// Prismaスキーマ定義ファイル
// 詳細: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ユーザー
/// システムを利用するユーザーの情報を管理します。
/// 認証情報（email, password）とプロフィール（name）を持ちます。
model User {
  id                      Int       @id @default(autoincrement())
  email                   String    @unique
  password                String
  name                    String
  role                    String    @default("USER") // ユーザーの権限: USER, ADMIN
  tokenValidFromTimestamp DateTime? // この時刻以降に発行されたトークンのみ有効
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  // リレーション
  createdTests     Test[]     @relation("TestCreator")
  createdTestCases TestCase[] @relation("TestCaseCreator")
  approvals        Approval[]
  uploadedFiles    File[]
  comments         Comment[]

  @@map("users")
}

/// テスト
/// 機能（Feature）に属するテストを管理します。
/// 各テストは複数のテストケースを持ちます。
/// ステータス: DRAFT（下書き）, IN_REVIEW（レビュー中）, APPROVED（承認済み）, REJECTED（却下）, ARCHIVED（アーカイブ）
/// 複合主キー: (featureId, id) - 各Feature内でIDが1から開始
model Test {
  featureId   Int
  id          Int
  name        String
  description String?  @db.Text
  status      String   @default("DRAFT")
  createdById Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // リレーション
  feature   Feature    @relation(fields: [featureId], references: [id], onDelete: Cascade)
  createdBy User       @relation("TestCreator", fields: [createdById], references: [id])
  testCases TestCase[]

  @@id([featureId, id])
  @@map("tests")
}

/// テストケース
/// テスト（Test）に属する個別のテストケースを管理します。
/// タイトル、説明、手順、期待結果、実績、ステータスなどの情報を持ちます。
/// ステータス: DRAFT（下書き）, IN_REVIEW（レビュー中）, APPROVED（承認済み）, REJECTED（却下）, ARCHIVED（アーカイブ）
/// 複合主キー: (featureId, testId, id) - 各Test内でIDが1から開始
model TestCase {
  featureId      Int
  testId         Int
  id             Int
  title          String
  description    String?
  steps          String   @db.Text
  expectedResult String   @db.Text
  actualResult   String?  @db.Text
  status         String   @default("DRAFT")
  createdById    Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // リレーション
  test      Test          @relation(fields: [featureId, testId], references: [featureId, id], onDelete: Cascade)
  createdBy User          @relation("TestCaseCreator", fields: [createdById], references: [id])
  tags      TestCaseTag[]
  files     File[]
  approvals Approval[]
  comments  Comment[]

  @@id([featureId, testId, id])
  @@map("test_cases")
}

/// タグ
/// テストケースを分類するためのタグを管理します。
/// タグ名とカラーコードを持ちます。
model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  color     String?
  createdAt DateTime @default(now())

  // リレーション
  testCases TestCaseTag[]

  @@map("tags")
}

/// テストケースタグ中間テーブル
/// テストケースとタグの多対多リレーションを管理します。
model TestCaseTag {
  featureId  Int
  testId     Int
  testCaseId Int
  tagId      Int
  assignedAt DateTime @default(now())

  // リレーション
  testCase TestCase @relation(fields: [featureId, testId, testCaseId], references: [featureId, testId, id], onDelete: Cascade)
  tag      Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([featureId, testId, testCaseId, tagId])
  @@map("test_case_tags")
}

/// ファイル
/// テストケースに添付されるファイルの情報を管理します。
/// スクリーンショットやログファイルなどを保存します。
model File {
  id         Int      @id @default(autoincrement())
  filename   String
  path       String
  mimeType   String
  size       Int
  featureId  Int
  testId     Int
  testCaseId Int
  uploadedBy Int
  createdAt  DateTime @default(now())

  // リレーション
  testCase TestCase @relation(fields: [featureId, testId, testCaseId], references: [featureId, testId, id], onDelete: Cascade)
  uploader User     @relation(fields: [uploadedBy], references: [id])

  @@map("files")
}

/// 承認
/// テストケースに対する承認・却下の情報を管理します。
/// コメント付きで承認状態を記録できます。
/// ステータス: PENDING（承認待ち）, APPROVED（承認）, REJECTED（却下）
model Approval {
  id         Int      @id @default(autoincrement())
  featureId  Int
  testId     Int
  testCaseId Int
  userId     Int
  status     String   @default("PENDING")
  comment    String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // リレーション
  testCase TestCase @relation(fields: [featureId, testId, testCaseId], references: [featureId, testId, id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id])

  @@map("approvals")
}

/// コメント
/// テストケースに対するコメントを管理します。
/// レビューやフィードバックを記録します。
model Comment {
  id         Int      @id @default(autoincrement())
  content    String   @db.Text
  featureId  Int
  testId     Int
  testCaseId Int
  userId     Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // リレーション
  testCase TestCase @relation(fields: [featureId, testId, testCaseId], references: [featureId, testId, id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id])

  @@map("comments")
}

/// 機能
/// テスト（Test）をグループ化するための機能を管理します。
/// 機能名、説明、カラーコード、ステータスなどの情報を持ちます。
/// ステータス: PLANNING（計画中）, DEVELOPING（開発中）, TESTING（テスト中）, COMPLETED（完了）, ON_HOLD（保留）
model Feature {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?  @db.Text
  color       String?
  status      String   @default("PLANNING")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // リレーション
  tests Test[]

  @@map("features")
}
